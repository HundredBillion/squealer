
  <h1 class="text-center my-5">SQUEALER</h1>


    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-center">Squealers I'm following</h5>
            <h6 class="card-text">
              <hr/>
              <% @users_i_am_following.each do |u|%>
                <div class="float-left"><%= u.fullname%></div>
                <div class="float-right">
                  <%= button_to 'Unfollow', user_follow_path(u, current_user.get_follow(u).id), method: :delete, class: 'btn btn-outline-primary btn-sm' %>
                </div>
              <%end%>
              </h6>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <%= form_with(model: @squeal, local: true) do |form| %>
              <div class="field">
                <%= form.text_field :comment, placeholder: "Squeal about something", class:"squeal-card-text" %>
              </div>
              
              <div class="actions">
                <%= form.submit "Squeal", class:"btn btn-primary"%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
 

  <div class="container squeal-container">
    <%   @collected_and_sorted_squeals.each do |s| %>
      <div class="row pb-1"> 
        <div class="col-md-6 offset-md-3">
          <div class="squeal-box">
            <div class="row">
              <%= s.comment %>
            </div>
            <div class="float-right"><%= s.user.fullname%></div>
            <br/>
            <div class="float-right"><%= s.created_at.strftime("%B %-d @%-I:%M %p")%></div>
          </div>
        </div>
      </div>
    <%end%>
  </div>
